<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExamSection">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <TextView
          android:id="@+id/testName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="20dp"
          android:padding="15dp"
          android:textStyle="bold"
          android:layout_weight="3"
          android:autoSizeTextType="uniform"
          android:text="Name of the Test" />
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:padding="15dp"
          android:orientation="horizontal">
          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="24dp"
              android:src="@drawable/baseline_timer_24"
              />
          <TextView
              android:id="@+id/testTimer"
              android:layout_width="wrap_content"
              android:layout_height="24dp"
              android:textStyle="bold"
              android:textSize="18sp"
              android:textAlignment="textEnd"
              android:text="100:00" />
      </LinearLayout>


  </LinearLayout>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/questionArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="70dp"
        />
    <LinearLayout
        android:layout_alignBottom="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <HorizontalScrollView
            android:layout_marginBottom="60dp"
            android:id="@+id/scrollView"
            android:layout_weight="2"
            android:layout_width="90pt"
            android:layout_height="80dp"
            >
        <LinearLayout
            android:id="@+id/question_btns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        </LinearLayout>
        </HorizontalScrollView>
        <Button
            android:layout_weight="2"
            android:id="@+id/submitTest"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/white"
            android:textColor="#0000ff"
            android:elevation="0dp"
            android:layout_height="wrap_content"
            android:text="Submit" />
    </LinearLayout>





    <LinearLayout
        android:id="@+id/navigation"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:padding="20dp"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/previous"
            android:layout_weight="1"
            android:background="@color/white"
            />
        <TextView
            android:id="@+id/questionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question No : 1"
            android:layout_weight="10"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            />
        <ImageButton
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next"
            android:layout_weight="1"
            android:background="@color/white"
            />
    </LinearLayout>



</RelativeLayout>
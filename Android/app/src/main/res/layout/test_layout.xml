<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:elevation="10dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    android:padding="10dp">
    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <TextView
        android:id="@+id/test_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Title of Test"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/test_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Description of test regarding full marks and what are the tags associated with this special test series. You will definitely enjoy how to deal with such prospectus how programming is actually done"
        />
    <TextView
        android:id="@+id/test_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="45 mins"/>
    <TextView
        android:id="@+id/test_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="10"/>
    <Button
        android:id="@+id/startbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Test"
        android:layout_gravity="right"
        android:padding="10dp"
        android:layout_margin="10dp"
        />
    </LinearLayout>
</androidx.cardview.widget.CardView>